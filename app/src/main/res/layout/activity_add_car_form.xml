<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AddCarForm">
    <TextView
        android:id="@+id/TextViewTitle"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="You car details:"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/josefin_sans"
        android:layout_centerHorizontal="true"
        android:textSize="18pt"></TextView>
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/EditTextCarNumber"
                android:layout_height="wrap_content"
                android:hint="Car Number"
                android:digits="0123456789"
                android:fontFamily="@font/josefin_sans"
                android:inputType="textPersonName"
                android:layout_width="fill_parent">
            </EditText>

            <EditText
                android:id="@+id/EditTextMake"
                android:layout_height="wrap_content"
                android:hint="Make"
                android:fontFamily="@font/josefin_sans"
                android:inputType="textPersonName"
                android:layout_width="fill_parent">
            </EditText>
            <EditText
                android:id="@+id/EditTextModel"
                android:layout_height="wrap_content"
                android:hint="Model"
                android:inputType="textPersonName"
                android:layout_width="fill_parent">
            </EditText>
            <EditText
                android:id="@+id/EditTextYear"
                android:layout_height="wrap_content"
                android:hint="Year of manufacture"
                android:digits="0123456789"
                android:fontFamily="@font/josefin_sans"
                android:inputType="textPersonName"
                android:layout_width="fill_parent">
            </EditText>

            <EditText
                android:id="@+id/EditTextTestMonth"
                android:layout_height="wrap_content"
                android:hint="Test Month"
                android:digits="0123456789"
                android:inputType="textPersonName"
                android:layout_width="fill_parent">
            </EditText>
            <EditText
                android:id="@+id/EditTextKM"
                android:layout_height="wrap_content"
                android:hint="KM"
                android:digits="0123456789"
                android:fontFamily="@font/josefin_sans"
                android:inputType="textPersonName"
                android:layout_width="fill_parent">
            </EditText>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/BTN_Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:fontFamily="@font/josefin_sans"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>